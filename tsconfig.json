{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@*": ["*"],
      "@module/*": ["modules/*"],
      "@user/*": ["modules/user/*"],
      "@event/*": ["modules/event/*"],
      "@admin/*": ["modules/admin/*"],
      "@config/*": ["config/*"],
      "@env/*": ["config/env/*"],
      "@persistence/*": ["config/persistence/*"],
      "@mailer/*": ["config/mailer/*"],
      "@jwt/*": ["config/jwt/*"],
      "@cache/*": ["config/cache/*"],
      "@bootstrap/*": ["config/bootstrap/*"],
      "@swagger/*": ["config/swagger/*"],
      "@shared/*": ["shared/*"],
      "@middleware/*": ["shared/middlewares/*"],
      "@exception/*": ["shared/exceptions/*"],
      "@interceptor/*": ["shared/interceptors/*"],
      "@util/*": ["shared/utils/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
